<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Recruitment</servlet-name>
		<servlet-class>org.smartlab.recruit.RecruitmentServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>Recruitment</servlet-name>
		<url-pattern>/recruitment</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>updateInfo</servlet-name>
		<servlet-class>org.smartlab.recruit.UpdateInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateInfo</servlet-name>
		<url-pattern>/updateInfo</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>welcome.jsp</welcome-file>
	</welcome-file-list>
</web-app>
